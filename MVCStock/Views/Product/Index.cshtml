@using MVCStock.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TblProduct>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ÜRÜN ID</th>
        <th>ÜRÜN ADI</th>
        <th>MARKASI</th>
        <th>KATEGORİ</th>
        <th>FİYAT</th>
        <th>STOK</th>
        <th> SİL </th>
        <th> GÜNCELLE </th>
    </tr>
    <tbody>

        @foreach (var prdt in Model)
        {
            <tr>
                <th>@prdt.ProductId</th>
                <td>@prdt.ProductName</td>
                <td>@prdt.ProductBrand</td>
                <td>@prdt.TblCategory.CategoryName</td>
                <td>@prdt.ProductPrice</td>
                <td>@prdt.ProductStock</td>
                <td><a href="/Product/Delete/@prdt.ProductId" class="btn btn-danger" onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');"> SİL </a>
                <td><a href="/Product/GetProductById/@prdt.ProductId" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
        }

    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
<a href="/Product/NewProduct" class="btn btn-primary">YENİ ÜRÜN EKLE</a>

