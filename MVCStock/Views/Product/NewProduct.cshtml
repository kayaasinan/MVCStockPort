@model MVCStock.Models.Entity.TblProduct
@{
    ViewBag.Title = "NewProduct";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-label" method="post">
    <div>
        <label>Ürün Adı</label>
        @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control", required = ""})
    </div>
    <div>
        <label>Ürün Markası</label>
        @Html.TextBoxFor(x => x.ProductBrand, new { @class = "form-control", required = ""  ,placeholder = "Buraya Markayı Giriniz.." })
    </div>
    <div>
        <label>Kategori Seçiniz</label>
        @Html.DropDownListFor(x => x.TblCategory.CategoryId, (List<SelectListItem>)ViewBag.vls, new { @class = "form-control" })
    </div>
    <div>
        <label>Ürün Fiyatı</label>
        @Html.TextBoxFor(x => x.ProductPrice, new { @class = "form-control", required = "" })

    </div>
    <div>
        <label>Ürün Stok</label>
        @Html.TextBoxFor(x => x.ProductStock, new { @class = "form-control", required = "" })


    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>

</form>

