@model MVCStock.Models.Entity.TblProduct
@{
    ViewBag.Title = "NewProduct";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-label" method="post">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="ProductName" />
    </div>
    <div>
        <label>Ürün Markası</label>
        <input type="text" class="form-control" name="ProductBrand" />
    </div>
    <div>
        <label>Kategori Seçiniz</label>
        @Html.DropDownListFor(x => x.TblCategory.CategoryId, (List<SelectListItem>)ViewBag.vls, new { @class = "form-control" })
    </div>
    <div>
        <label>Ürün Fiyatı</label>
        <input type="text" class="form-control" name="ProductPrice" />
    </div>
    <div>
        <label>Ürün Stok</label>
        <input type="text" class="form-control" name="ProductStock" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>

</form>

