@model MVCStock.Models.Entity.TblProcess
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#Modal1">Satış Yap</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Satış Ekranı</h2>
            </div>
            <form method="post" action="/Sales/NewSale">
                <div class="modal-body">
                    <label>
                        Ürün Adı
                    </label>
                    @Html.DropDownListFor(x => x.ProductId, (List<SelectListItem>)ViewBag.Products, "Ürün Seçiniz", new { @class = "form-control" })
                    <br />
                    <label>
                        Müşteri Adı Soyadı
                    </label>
                    @Html.DropDownListFor(x => x.CustomerId, (List<SelectListItem>)ViewBag.Customers, "Müşteri Seçiniz", new { @class = "form-control" })
                    <br />
                    <label>
                        Adet
                    </label>
                    @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control" })
                    <br />
                    <label>
                        Fiyatı
                    </label>
                    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
                    <br />
                    <button type="submit" class="btn btn-success btn-lg">Satış Yap</button>
                    <button type="button" class="btn btn-danger btn-lg" data-dismiss="modal">Vazgeç</button>
                </div>
            </form>
        </div>
    </div>
</div>